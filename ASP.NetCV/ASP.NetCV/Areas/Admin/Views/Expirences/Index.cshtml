@model IEnumerable<ASP.NetCV.Models.Entities.Expirence>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-dark" style="width:1000px">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Date</th>
            <th scope="col">Name</th>
            <th scope="col">Work</th>
            <th scope="col">Location</th>
            <th scope="col">Desc</th>
            <th scope="col" class="btn btn-primary" style="height:45px; margin-top:5px; margin-left:10px;color:white; width:250px"><a style="color: white;" asp-action="Create">Create New</a></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">
                <img style="width:100px" src="~/Admin/uploads/images/@item.ImgPath" />
            </th>
            <td>@item.Date</td>
            <td>@item.ExpierenceName</td>
            <td>@item.ExpirenceWork</td>
            <td>@item.ExpirenceLocation</td>
            <td>@item.ExpierenceDesc</td>
            <td>
                <a class="btn btn-primary" style="width:70px" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }

    </tbody>


